<%= link_to("<< Back to List", books_path, :class => 'back-link') %>
<div class="subjects new">
    <h2>Edit a Book</h2>
    <%= form_for(@book) do |f| %>
        <table summary="Book Information Form Fields">
            <tr>
                <th>Title</th>
                <td><%= f.text_field(:title) %></td>
            </tr>
            <tr>
                <th>Author</th>
                <td><%= f.text_field(:author) %></td>
            </tr>
            <tr>
                <th>Genre</th>
                <td><%= f.text_field(:genre) %></td>
            </tr>
            <tr>
                <th>Price</th>
                <td><%= f.text_field(:price) %></td>
            </tr>
            <tr>
                <th>Published Year</th>
                <td><%= f.text_field(:published) %></td>
            </tr>
        </table>
        <div class="form-buttons">
            <%= f.submit("Update This Book") %>
        </div>
    <% end %>
</div>

